LIBINDI_3RDPARTY_CONF_OPTS += -DWITH_RADIOSIM=OFF

ifeq ($(BR2_PACKAGE_LIBINDI_INDI_SSAG),y)
LIBINDI_3RDPARTY_CONF_OPTS += -DWITH_SSAG=ON
LIBINDI_3RDPARTY_DEPENDENCIES += libusb
else
LIBINDI_3RDPARTY_CONF_OPTS += -DWITH_SSAG=OFF
endif

$(eval $(cmake-package))

